<section class="login">
    <div class="login_box">
        <div style="position: relative;" class="left">
            <div class="top_link"><a href="/users/login"><img
                        src="https://drive.google.com/u/0/uc?id=16U__U5dJdaTfNGobB_OpwAJ73vM50rPV&export=download"
                        alt="">Đăng Nhập</a></div>
            <div class="contact">
                <form id="register-form" action="/users/register" method="post">
                    <h3>Đăng Ký</h3>
                    <input id="username" name="username" type="text" placeholder="Tên Đăng Nhập">
                    <input id="email" name="email" type="email" placeholder="Email">
                    <input id="phone" name="phone" type="text" placeholder="Số Điện Thoại">
                    <input id="address" name="address" type="text" placeholder="Địa Chỉ">
                    <input id="password" name="password" type="password" placeholder="Password">
                    {{#if error}}
                    <div class="w-100 mt-5 alert alert-danger text-center">{{error}}</div>
                    {{/if}}
                    {{#if success}}
                    <div class="w-100 mt-5 alert alert-success text-center">{{success}}</div>
                    {{/if}}

                    <div style="position: fixed; z-index: 100000; bottom: 0%; left: 40%" class="notification w-90 text-center my-0">

                    </div>
                    <button type="submit" class="submit">Đăng Ký</button>
                    <div style="position: absolute; width: 50px; height: 50px; border-width: 5px; right: 10%; bottom: 5%" class="loader"></div>
                </form>
            </div>
        </div>
        <div class="right">
            <img src="/img/banner.png" alt="banner">
        </div>
    </div>
</section>
